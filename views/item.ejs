<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') -%>
</head>
<body>
    <%- include('header') -%>
    <div class="container">
        <div class="item">
            <div class="products-item">
                <div class="products-image">
                    <img src="<%=data.url%>" alt="chairs">
                </div>
                <div class="favorites">
                    <i class="fa-regular fa-heart"></i>
                </div>
                <span class="discount"><%=data.discount%></span>
            </div>
            <div class="item-info">
                <h3><%=data.title%></h3>
                <h4><%=data.cost%></h4>
                
                <button class="btn-additional options" onclick="openOptions(this)">
                    <i class="fa-solid fa-ellipsis"></i>
                </button>
                <button type="button" class="btn-add">
                    <i class="fa-solid fa-plus"></i>
                    Добавить в корзину
                </button>
                <div class="btn-group option">
                    <a href="http://localhost:8000/edit/<%=data._id%>">
                        <button class="btn-edit">Редактировать</button>
                    </a>
                    <button class="btn-delete" onclick="deleteItem('<%= data._id%>')">Удалить</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/scripts/edit.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js" integrity="sha512-LUKzDoJKOLqnxGWWIBM4lzRBlxcva2ZTztO8bTcWPmDSpkErWx0bSP4pdsjNH8kiHAUPaT06UXcb+vOEZH+HpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/scripts/delete.js"></script>
</body>
</html>